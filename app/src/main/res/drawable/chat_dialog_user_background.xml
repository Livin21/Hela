<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Bottom 2dp Shadow -->
    <item
        >
        <shape >
            <gradient
                android:startColor="@color/cardview_shadow_start_color"
                android:endColor="@color/cardview_shadow_end_color"
                android:type="sweep"
                />
            <corners
                android:radius="1000dp"
                android:bottomRightRadius="0dp"/>
        </shape>
    </item>

    <item android:bottom="3dp"
        android:left="1dp"
        android:right="0.5dp"
        >
        <shape >
            <solid
                android:color="@color/user_chat_dialog_background_color"
                />
            <corners
                android:radius="1000dp"
                android:bottomRightRadius="0dp"/>
        </shape>
    </item>

</layer-list>


